<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Curso</title>

    <!-- Estilos CSS -->
    <style>
        /* Estilos generales */

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
        }

        /* Estilos para la tabla de cursos */

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f5f5f5;
        }

        .actions {
            text-align: center;
        }

        /* Estilos para el formulario de editar curso */

        .form-group {
            margin-bottom: 10px;
        }

        .form-group label {
            display: block;
            font-weight: bold;
        }

        .form-group input[type="text"],
        .form-group select {
            width: 100%;
            padding: 5px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .form-group input[type="submit"],
        .form-group input[type="reset"] {
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .form-group input[type="submit"]:hover,
        .form-group input[type="reset"]:hover {
            background-color: #218838;
        }
    </style>

    <!-- SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.6/dist/sweetalert2.min.css">
</head>

<body>
    <div class="container">
        <h1>Editar Curso</h1>

        <!-- Formulario para editar curso -->
        <form id="formulario" method="POST" action="/cursos/editar/<%= curso.id %>">
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" value="<%= curso.nombre %>" required>
            </div>
            <div class="form-group">
                <label for="descripcion">Descripción:</label>
                <textarea id="descripcion" name="descripcion" required><%= curso.descripcion %></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar">
                <input type="reset" value="Cancelar">
            </div>
        </form>

        <!-- Mostrar mensaje de éxito -->
        <% if (mensaje) { %>
            <script>
                Swal.fire({
                    title: 'Éxito',
                    text: '<%= mensaje %>',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
            </script>
        <% } %>

    </div>

    <!-- SweetAlert JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.6/dist/sweetalert2.all.min.js"></script>
        <script>
            // Función para validar el formulario antes de enviarlo
            (function () {
                const $txtnombre = document.getElementById('nombre');
                const $formulario = document.getElementById('formulario');
        
                $formulario.addEventListener('submit', function (e) {
                    let nombre = String($txtnombre.value).trim();
        
                    if (nombre.length === 0) {
                        e.preventDefault();
        
                        Swal.fire({
                            title: 'Sin espacios',
                            text: 'El campo no puede ir con espacios',
                            icon: 'error',
                            confirmButtonText: 'Cancelar'
                        });
                    }
                });
            })();
        </script>
        </body>
        
        </html>
        