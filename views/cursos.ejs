    <style>
        /* Estilos personalizados */
        .primary-blue {
            color: #007bff;
        }

        .primary-red {
            color: #dc3545;
        }

        .btn-inscripcion {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-inscripcion:hover {
            background-color: #218838;
        }

        .alert-message {
            background-color: #17a2b8;
            color: white;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
        }

        .welcome-section {
            background-color: #f8f9fa;
            padding: 50px 0;
            text-align: center;
        }

        .welcome-section h1 {
            color: #333;
            font-size: 32px;
            margin-bottom: 20px;
        }

        .welcome-section p {
            color: #666;
            font-size: 18px;
            margin-bottom: 0;
        }

        .courses-section {
            padding: 50px 0;
            text-align: center;
        }

        .courses-section h2 {
            color: #333;
            font-size: 28px;
            margin-bottom: 30px;
        }

        .course-card {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .course-card h3 {
            color: #333;
            font-size: 24px;
            margin-bottom: 10px;
        }

        .course-card p {
            color: #666;
            font-size: 16px;
            margin-bottom: 10px;
        }

        .course-card button {
            font-size: 16px;
        }

        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            text-align: center;
            color: #666;
            font-size: 14px;
        }
    </style>
</head>

