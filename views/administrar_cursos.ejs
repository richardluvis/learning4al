<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administrar Cursos</title>

    <!-- Estilos CSS -->

    <style>
        /* Estilos generales */

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
        }

        /* Estilos para la tabla de cursos */

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f5f5f5;
        }

        .actions {
            text-align: center;
        }

        /* Estilos para el formulario de agregar/editar curso */

        .form-group {
            margin-bottom: 10px;
        }

        .form-group label {
            display: block;
            font-weight: bold;
        }

        .form-group input[type="text"],
        .form-group select {
            width: 100%;
            padding: 5px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .form-group textarea {
            width: 100%;
            height: 100px;
            padding: 5px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .form-group input[type="submit"],
        .form-group input[type="reset"] {
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .form-group input[type="submit"]:hover,
        .form-group input[type="reset"]:hover {
            background-color: #218838;
        }
    </style>
</head>

<body>
    
    <div class="container">
        <h1>Administrar Cursos</h1>

        <!-- Tabla de cursos -->
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% cursos.forEach(curso => { %>
                <!-- Iterar sobre los cursos -->
                <tr>
                    <td><%= curso.id %></td>
                    <td><%= curso.nombre %></td>
                    <td><%= curso.descripcion %></td>
                    <td class="actions">
                        <a href="/cursos/editar/<%= curso.id %>">Editar</a>
                        <a href="/cursos/eliminar/<%= curso.id %>">Eliminar</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>


        <!-- Formulario para agregar/editar curso -->
        <h2>Agregar/Editar Curso</h2>
        <form action="/cursos/agregar" method="POST">
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" required>
            </div>
            <div class="form-group">
                <label for="descripcion">Descripción:</label>
                <textarea id="descripcion" name="descripcion" required></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar">
                <input type="reset" value="Cancelar">
            </div>
        </form>
    </div>
</body>

</html>



